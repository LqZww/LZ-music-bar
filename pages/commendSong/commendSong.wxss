.commendSongContainer {}

.commendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.commendSongContainer .header image {
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
  width: 100%;
  height: 100%;
}

.commendSongContainer .header .date {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  color: #ffffff;

}

.commendSongContainer .header .date .day {
  /* border: 1rpx solid red; */
  font-size: 50rpx;
}

.commendSongContainer .header .date .month {
  /* border: 1rpx solid red; */
  font-size: 30rpx;
}

.commendSongContainer .header .date .month::before {
  content: ' ';
}

.playAll {
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.playAll .content {
  display: flex;
  align-items: center;
}

.playAll .content .title {
  margin-left: 10rpx;
}

.playAll .check {
  font-size: 50rpx;
}

.playAll .content .icon-bofangquanbu {
  font-size: 50rpx;
  color: #ff3428;
}

/* 列表 */
.songLists {
  /* border: 1rpx solid red; */

}

.songLists .songList {
  padding: 20rpx;
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}



.songLists .songList .item {
  display: flex;
}

.songLists .songList .item image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 6rpx;

}

.songLists .songList .item .content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  /* border: 1rpx solid red; */
  height: 70rpx;
}


.songLists .songList .item .content .titlealia .title {
  font-size: 28rpx;

}

.songLists .songList .item .content .titlealia .alia {
  font-size: 28rpx;
  color: #838383;
  margin-left: 10rpx;
  /* border: 1rpx solid red; */

}




.songLists .songList .item .content .author {
  color: #838383;
  font-size: 20rpx;
}

.songLists .songList .btn {
  /* border: 1rpx solid red; */
  display: flex;
  color: #b3b3b3;
}

.songLists .songList .btn .icon-mv {
  margin-right: 20rpx;
  font-size: 50rpx;
}

.songLists .songList .btn .icon-dian {
  font-size: 50rpx;

}