.personalContainer {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 登陆 */
.login {
  margin-top: 140rpx;
}

.login .toLogin {
  display: flex;
  align-items: center;
}

.login image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.login .gologin {
  margin-left: 20rpx;
}

/* 列表 */
.lists {
  /* border: 1rpx solid red; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background-color: #fff;
  margin-top: 26rpx;
  border-radius: 10rpx;
}

.lists .listItem {
  /* border: 1rpx solid blue; */
  width: 18%;
  margin: 28rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}

.lists .listItem .iconfont {
  /* border: 1rpx solid red; */
  font-size: 50rpx;
  color: #ff3428;
}

/* 喜欢的音乐 */
.loveMusic {
  /* border: 1rpx solid red; */
  margin-top: 20rpx;
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}

.loveMusic image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.loveMusic .loveMusicItem {
  /* border: 1rpx solid blue; */
  padding: 14rpx;
  display: flex;
  flex-direction: column;
}

.loveMusic .loveMusicItem text:first-child {
  font-size: 26rpx;
}

.loveMusic .loveMusicItem text:last-child {
  font-size: 20rpx;
  color: #afafaf;
  margin-top: 8rpx;
}

.loveMusic .heartbeat {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 22rpx;
  margin-left: 42%;
}

/* 创建歌单、收藏歌单、歌单助手按钮  */
.setBtn {
  margin-top: 20rpx;
  padding: 20rpx;
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-around;
}

/* 创建歌单 */
.setSongList {
  margin-top: 20rpx;
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}