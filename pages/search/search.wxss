.searchContainer {
  padding: 0 20rpx;
}

.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}

.searchInput {
  position: relative;
  flex: 1;
  background-color: rgba(237, 237, 237, .3);
  border-bottom: 1rpx solid #858585;
  /* margin-left: 20rpx; */

}

.searchIcon {
  position: absolute;
  left: 6rpx;
  /* border: 1rpx solid red; */
}

.searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
}

.clear {
  position: absolute;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
  z-index: 10;
}

/* 热搜 */
.hotContainer .title {
  padding: 0 10rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}

.hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;

}

.hotItem .order {
  /* border: 1rpx solid red; */
  display: inline-block;
  width: 40rpx;
  color: #999999;
}

.hotItem .name {
  /* border: 1rpx solid red; */
  /* padding-left: 10rpx; */
  display: inline-block;
}

.hotItem .order {
  margin: 0 10rpx;
}

.hotItem .iconImg {
  width: 35rpx;
  height: 20rpx;
  margin-left: 8rpx;
}


.history {
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 0 10rpx;
}

.history .title {
  /* border: 1rpx solid blue; */
  height: 80rpx;
  line-height: 80rpx;
}

.history .historyItem {
  width: 76%;
  /* border: 1rpx solid red; */
  /* margin-left: 30rpx;
  margin-right: 10rpx; */
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}

.history .historyItem .historyItemContent {
  border-radius: 30rpx;
  margin: auto 12rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f3f3f3;
}


.history .icon-del {
  /* border: 1rpx solid blueviolet; */
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #b3b3b3;
}

.showSearchContent {
  padding: 10rpx;
}

.showSearchContent .searchContent {}

.showSearchContent .searchList {
  /* border: 1rpx solid red; */
  margin-top: 14rpx;
}

.showSearchContent .searchList .searchItem {
  /* border: 1rpx solid red; */
  border-bottom: 1rpx solid #f5f5f5;
  margin: 20rpx 0;
  padding: 10rpx 0;
}

.showSearchContent .searchList .searchItem .name {
  margin-left: 10rpx;
}