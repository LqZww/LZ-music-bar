.videoContainer {
  padding: 6rpx;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
  background-color: #f5f5f5;
  position: fixed;
  z-index: 20;
  top: 0;
}

.header .main .navItem {
  padding: 0 16rpx;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 20rpx;
}

.header .main .active {
  border: 1rpx solid #f5edeb;
  border-radius: 30rpx;
  color: #fe3a3b;
  background-color: #f5edeb;
}

/* 视频 */
.viedeoScroll {
  /* border: 1rpx solid red; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 60rpx;

  height: calc(100vh - 66rpx);
}

.viedeoScroll .videoItem {
  position: relative;
  margin-bottom: 20rpx;
  /* border: 1rpx solid blue; */
  border-radius: 20rpx;
  width: 46%;
  /* height: 620rpx; */
  background-color: #ffffff;
}

.viedeoScroll .videoItem .videoImg {
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 100%;

}

.viedeoScroll .videoItem .topLevel {
  /* border: 1rpx solid red; */
  position: absolute;
  left: 20rpx;
  bottom: 144rpx;
  z-index: 10;

}

.viedeoScroll .videoItem .topLevel .userImg {
  /* border: 1rpx solid blue; */
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.viedeoScroll .videoItem .main {
  font-size: 26rpx;
  padding: 10rpx 10rpx 0 10rpx;
  /* height: 70rpx; */
}

.viedeoScroll .videoItem .main .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.viedeoScroll .videoItem .footer {
  /* border: 1rpx solid red; */
  font-size: 18rpx;
  color: #808080;
  /* position: absolute; */
  margin-left: 10rpx;
  margin-bottom: 10rpx;

  display: flex;
}

.viedeoScroll .videoItem .footer .playVolume {
  margin-right: 60rpx;
}

